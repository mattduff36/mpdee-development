{
  "name": "mpdee-website",
  "version": "1.0.0",
  "description": "mpdee website",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "generate-favicons": "node generate-favicons.js",
    "lint:fast": "oxlint .",
    "deps:check": "depcheck",
    "build:analyze": "ANALYZE=true next build",
    "test:links": "blc http://localhost:3000 --recursive --follow --ordered --verbose",
    "test:lighthouse": "lhci autorun",
    "test:e2e": "playwright test",
    "postinstall": "patch-package",
    "audit:all": "npm run lint && npm run lint:fast && npm run deps:check && npm run build:analyze && npm run test:links && npm run test:lighthouse"
  },
  "dependencies": {
    "@once-ui-system/core": "^1.6.1",
    "@types/react-dom": "^19.1.6",
    "@vercel/analytics": "^1.5.0",
    "classnames": "^2.5.1",
    "next": "15.3.8",
    "nodemailer": "^7.0.5",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-icons": "^5.5.0",
    "sass": "^1.97.3",
    "sharp": "^0.34.5"
  },
  "devDependencies": {
    "@lhci/cli": "^0.15.1",
    "@next/bundle-analyzer": "^16.1.6",
    "@playwright/test": "^1.58.2",
    "@swc/core": "^1.15.11",
    "@swc/jest": "^0.2.39",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "24.0.13",
    "@types/nodemailer": "^6.4.17",
    "@types/react": "19.1.8",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.36.0",
    "broken-link-checker": "^0.7.8",
    "depcheck": "^1.4.7",
    "eslint": "^9.30.1",
    "eslint-config-next": "^15.3.5",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "eslint-plugin-sonarjs": "^4.0.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.0.4",
    "jest-environment-jsdom": "^30.0.4",
    "oxlint": "^1.49.0",
    "patch-package": "^8.0.0",
    "playwright": "^1.58.2",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.0",
    "typescript": "5.8.3"
